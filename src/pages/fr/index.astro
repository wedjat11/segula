---
// src/pages/fr/index.astro (Página principal en francés)
import { getRelativeLocaleUrl } from 'astro:i18n';
import Layout from '../../layouts/Layout.astro';
import HeroImageSection from '@/components/HeroImageSection';
import TitleContainer from '@/components/TitleContainer';
import AboutSection from '@/components/AboutSection';
import ServicesSection from '@/components/ServicesSection';
import JobApplicationForm from '@/components/JobApplicationForm';
import Footer from '@/components/Footer';
import SmoothScroll from '@/components/SmoothScroll';

// Configuración del idioma para esta página
const currentLocale = 'fr';
const currentPath = Astro.url.pathname;

// URLs localizadas para navegación
const aboutURL = getRelativeLocaleUrl('fr', 'about');
---

<Layout
  title="Segula Technologies - Rejoignez notre équipe d'ingénieurs"
  lang={currentLocale}
  currentPath={currentPath}
>
  <SmoothScroll client:load />

  <container class="flex flex-col gap-10">
    <!-- Hero Image Section (100vh) - Incluye Header, Menu, Imagen de fondo y botón de scroll -->
    <HeroImageSection
      section="about"
      locale={currentLocale}
      currentPath={currentPath}
      client:only="react"
    />

    <!-- Contenedor de título con traducciones -->
    <TitleContainer
      section='business'
      locale={currentLocale}
      client:only
    />

   <div class="flex flex-col">
     <!-- Sección about con traducciones -->
    <AboutSection
      locale={currentLocale}
      client:only="react"
    />

    <!-- Sección de servicios -->
    <ServicesSection
      locale={currentLocale}
      client:only
    />
   </div>

    <!-- Formulario de aplicación -->
   <div>
     <JobApplicationForm
      locale={currentLocale}
      client:load
    />

    <!-- Footer -->
    <Footer locale={currentLocale} client:only />
   </div>
  </container>
</Layout>

<style>
  container {
    @apply w-full max-w-none;
  }
</style>