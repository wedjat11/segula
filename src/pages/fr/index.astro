---
// src/pages/index.astro (Página principal en español)
import { getRelativeLocaleUrl } from 'astro:i18n';
import Layout from '../../layouts/Layout.astro';
import MainHeader from '@/components/MainHeader';
import MainMenu from '@/components/MainMenu';
import MainImageContainer from '@/components/MainImageContainer';
import TitleContainer from '@/components/TitleContainer';
import ScrollButton from '@/components/ScrollButton';
import WhiteBullet from '@/components/WhiteBullet';
import AboutSection from '@/components/AboutSection';
import ServicesSection from '@/components/ServicesSection';
import JobApplicationForm from '@/components/JobApplicationForm';
import Footer from '@/components/Footer';

// Configuración del idioma para esta página
const currentLocale = 'fr';
const currentPath = Astro.url.pathname;

// URLs localizadas para navegación
const aboutURL = getRelativeLocaleUrl('es', 'about');
---

<Layout 
  title="Segula Technologies - Únete a nuestro equipo de ingenieros" 
  lang={currentLocale}
  currentPath={currentPath}
>
  <container class="flex flex-col gap-10">
    <!-- Header con selector de idioma -->
    <MainHeader 
      currentLocale={currentLocale}
      currentPath={currentPath}
      client:only 
    />
    
    <!-- Menu principal -->
    <MainMenu 
      locale={currentLocale}
      client:only 
    />

    <!-- Contenedor de imagen principal -->
    <MainImageContainer
      section="about"
      locale={currentLocale}
      client:only
    />
    
    <!-- Botón de scroll -->
    <ScrollButton />

    <!-- Contenedor de título con traducciones -->
    <TitleContainer 
      locale={currentLocale}
      section='business'
      client:only 
    />
    
    <!-- Sección about con traducciones -->
    <AboutSection 
      locale={currentLocale}
      client:only 
    />
    
    <!-- Sección de servicios -->
    <ServicesSection 
      locale={currentLocale}
      client:only 
    />
    
    <!-- Formulario de aplicación -->
    <!-- <JobApplicationForm
      locale={currentLocale}
      client:only
    /> -->

    <Footer locale={currentLocale} client:only />
  </container>
</Layout>

<style>
  container {
    @apply w-full max-w-none;
  }
</style>