---
import { getRelativeLocaleUrl } from 'astro:i18n';
import Layout from '../layouts/Layout.astro';
import HeroImageSection from '@/components/HeroImageSection';
import TitleContainer from '@/components/TitleContainer';
import EngineeringSection from '@/components/EngineeringSection';
import EngineeringServicesSection from '@/components/EngineeringServicesSection';
import Footer from '@/components/Footer';
import SmoothScroll from '@/components/SmoothScroll';

const currentLocale = 'es';
const currentPath = Astro.url.pathname;
---

<Layout
  title="Segula Technologies - Servicios de IngenierÃ­a"
  lang={currentLocale}
  currentPath={currentPath}
>
  <SmoothScroll client:load />

  <container class="flex flex-col gap-10">
    <HeroImageSection
      section="engineering"
      locale={currentLocale}
      currentPath={currentPath}
      client:only="react"
    />

    <TitleContainer
      locale={currentLocale}
      section="services"
      client:only
    />



    <EngineeringServicesSection
      locale={currentLocale}
      client:only
    />

    <Footer locale={currentLocale} client:only />
  </container>
</Layout>

<style>
  container {
    @apply w-full max-w-none;
  }
</style>
